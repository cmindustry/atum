.header 
  text-align: center
  h1, h2 
    margin: 0
    line-height: 1.2
  .title 
    a
      color:#cc0000
      text-decoration: none
      font: 300 3rem Serif
      transition: .3s
      &:hover
        color: #bbb
    
  .desc
      margin:.5em 0 .25em
      font: 18px Sans-Serif
      color: #bbb

  .links 
    height: 40px
    margin: 2.25em auto 4.5em
    border-top: 1px dotted #ddd
    border-bottom: 1px dotted #ddd
    font: 300 13px Sans-Serif
    text-transform: uppercase
    letter-spacing: 1px
    ul 
      text-decoration: none
      padding: 0
      li
        display: inline-block
        margin: 0 .5em
        a
          color: #222
          text-decoration: none
          transition: .3s
          &:hover
            color: #cc0000
  
  .ipad-menu
    display: none
    position: fixed
    top: 4em
    left: -1px

  .mobile-menu
    display: none
    position: fixed
    top: 0
    left: 0
    width: calc(100% - 3em)
    padding: 0 1.5em
    height: 3em
    z-index: 1
    box-shadow: 0px 1px 5px #ddd
    h3
      a
        color:#cc0000
        text-decoration: none
        font: 500 1.6rem Sans-Serif
        text-shadow: 1px 1px #fff, 2px 2px #f78769
        &:hover
          color: #bbb

  .menu
    padding: .5em 1em
    border: 1px dashed #fff
    outline: 5px solid #bbb
    background: #bbb
    font: 500 14px Sans-Serif
    color: #fff
    text-transform: upperCase
          
    &::before 
      content: ''
      display: inline-block
      width: 16px
      height: 16px
      margin-right: 3px
      vertical-align: -3px

    &:focus, &:active
      background: #cc0000
      outline: 3px solid #cc0000

@media screen and (max-width: 1015px)
  .header
    .ipad-menu
      display: block

@media screen and (max-width: 640px) 
  .header 
    .title 
      a
        font-size: 2.5rem

    .ipad-menu
      display: none

    .mobile-menu 
      display: flex
      justify-content: space-between
      align-items: center
      .menu
        padding: .2em .5em
        font: 500 12px Sans-Serif
        outline: 3px solid #bbb

      
      
