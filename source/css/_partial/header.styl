@media screen and (max-width: 1015px)
  .header
    .ipad-menu
      display: block
      text-decoration: underline

@media screen and (max-width: 640px) 
  .header 
    .title 
      a
        font-size: 2.5rem

    .ipad-menu
      display: none

    .mobile-menu 
      display: flex
      justify-content: space-between
      align-items: center

      .menu
        font: 500 1.4em Serif

      
      
